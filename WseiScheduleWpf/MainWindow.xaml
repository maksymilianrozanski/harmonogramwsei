<Window x:Class="WseiScheduleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WseiScheduleWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="620">
    <Grid>
        <TextBlock Name="ManualTextBlock" TextWrapping="Wrap" Margin="25" HorizontalAlignment="Left"
                   VerticalAlignment="Top">
            Please choose pdf file.
        </TextBlock>
        <TextBlock Name="StatusTextBlock" TextWrapping="Wrap" Margin="25" HorizontalAlignment="Left"
                   VerticalAlignment="Bottom" />

        <Button x:Name="BrowseButton" Content="Choose file" HorizontalAlignment="Right"
                VerticalAlignment="Center" Click="BrowseButton_Click" Margin="25" />
    </Grid>
</Window>